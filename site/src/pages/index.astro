<script is:inline>
  (() => {
    const section = document.getElementById('work');
    if (!section) return;

    const animateIn = () => {
      section.querySelectorAll('.work-left, .work-card-1, .work-card-2, .work-card-3, .work-card-center, .work-card-4').forEach(el => {
        el.classList.remove('work-out');
        el.classList.add('work-in');
      });
    };

    const animateOut = (direction) => {
      section.querySelectorAll('.work-left, .work-card-1, .work-card-2, .work-card-3, .work-card-center, .work-card-4').forEach(el => {
        el.classList.remove('work-in');
        el.classList.add('work-out');
      });
    };

    let lastY = window.scrollY;
    let wasVisible = false;

    const obs = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        const currentY = window.scrollY;
        const scrollingDown = currentY > lastY;
        lastY = currentY;

        if (entry.isIntersecting) {
          wasVisible = true;
          // Slight delay so user sees the fly-in
          setTimeout(animateIn, 80);
        } else if (wasVisible) {
          animateOut(scrollingDown ? 'down' : 'up');
        }
      });
    }, {
      threshold: 0.08,
      rootMargin: '0px 0px -60px 0px'
    });

    obs.observe(section);
  })();
